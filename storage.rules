rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Music files - public read, admin write
    match /music/{allPaths=**} {
      allow read: if true; // Public read for music files (previews)
      allow write: if request.auth != null && 
        (request.auth.token.email.matches('.*@nikodola\\.com$') ||
         request.auth.token.email.matches('.*thelegendofhend@gmail\\.com$') ||
         request.auth.token.email.matches('.*nikodola@gmail\\.com$'));
    }
    
    // Purchased files - users can only read their own purchases
    // Note: Server uploads use Admin SDK (bypasses rules)
    // Downloads use signed URLs (bypass rules), but direct access still requires auth
    match /purchases/{userId}/{allPaths=**} {
      allow read: if request.auth != null && 
        request.auth.uid == userId;
      allow write: if false; // Only server (Admin SDK) can write purchases
    }
    
    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

